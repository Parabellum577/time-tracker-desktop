{
  "compilerOptions": {
    "outDir": "./dist/",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2018",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@services/*": ["./services/*"],
      "@store/*": ["store/*"],
      "@store": ["./store/index"],
      "@api": ["./services/api.ts"],
      "@api-types": ["./services/api-types.ts"],
      "@types": ["./services/types.ts"],
      "@components/*": ["./render/src/Components/*"],
      "@images/*": ["./images/*"],
      "@test-helpers/*": ["./test-helpers/*"],
      "@electronMain/*": ["./electron-main/*"],
      "@utils": ["./utils/index.ts"],
      "@Routers": ["./render/src/Routers/index.tsx"],
      "@openWindow": ["./services/openWindow.ts"]
    }
  },
  "files": ["./globals.d.ts"],
  "include": ["store/**/*", "render/**/*", "services/**/*", "images/*"]
}
